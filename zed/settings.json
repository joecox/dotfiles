// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // meta
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },

  // styling
  "theme": {
    "mode": "system",
    "light": "Quiet Light",
    "dark": "One Dark",
  },
  "buffer_font_family": "SF Mono",
  "buffer_font_size": 14.0,
  "buffer_font_features": {
    "calt": false,
  },
  "buffer_line_height": { "custom": 1.4 },
  "wrap_guides": [80, 88, 100],
  "ui_font_family": ".SystemUIFont",
  "terminal": {
    "font_size": 14.0,
    "option_as_meta": true,
    "detect_venv": "off",
  },
  "minimap": {
    "show": "never",
  },

  // editor behavior
  "format_on_save": "off",
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "drag_and_drop_selection": {
    "enabled": false,
  },

  // extensions/associations
  "auto_install_extensions": {
    "fish": true,
    "git-firefly": true,
    "editorconfig": true,
    "quiet-light-theme": true,
    "ghostty": true,
  },
  "languages": {
    "Fish": {
      "formatter": {
        "external": {
          "command": "fish",
          "arguments": ["-c", "fish_indent"],
        },
      },
    },
  },
  "file_types": {
    "Git Config": ["*.gitconfig", "gitconfig", "**/.git/config"],
    "Ghostty": ["**/ghostty-config"]
  },
}
